    
    
    <h1>Please enter the information for your Product</h1>
    <form method="POST" action="/addproducts" enctype="multipart/form-data">

        <label>Product Name</label>
        <input type="text" name="productName" id="productName"> <br><br>

        <label>Price $</label>
        <input type="number" placeholder="0.00" step="0.01"  name="price" id="price"> <br><br>

        <label>Description</label><br>
        <textarea id="description" name="description"></textarea><br><br>
        
        <label>Quantity</label>
        <input type="number" placeholder="0" step="1"  name="quantity" id="quantity"> <br><br>

        <label>Category</label>
        <select name="category" id="category">
            <option value="general">General</option>
            <option value="electronics">Electronics</option>
            <option value="clothing">Clothing</option>
            <option value="books">Books</option>   
        </select>    
         <br><br>

         <label>Best Seller</label>
        <select name="bestseller" id="bestseller">
            <option value="false">No</option>
            <option value="true">Yes</option>     
        </select>    
         <br><br>
        
        <label>Picture</label>
        <input type="file" name="productPic" id="productPic"><br><br>

        <input type="submit" accept="image/*" value="Add Product">

    </form>