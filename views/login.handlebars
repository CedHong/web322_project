<div class="forms">
    <section class="login">
        <form action="/login" method="POST">
            <label for="email">Email</label><br>
            <input id="email" type="text" name="email" value={{this.email}}></input><br>
            {{#if msg_1}}
            <p class="error">{{msg_1}}</p>
            {{/if}}
            <label for="password">Password</label><br>
            <input id="password" type="password" name="password" value={{this.password}}></input><br>
            {{#if msg_2}}
            <p class="error">{{msg_2}}</p>
            {{/if}}
            <input type="submit" value="Sign in">
        </form>
    </section>
</div>